{
  "semi": false,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "tabWidth": 2,
  "overrides": [
    {
      "files": [".prettierrc"],
      "options": { "parser": "json" }
    },
    {
      "files": ["*.less", "*.css"],
      "options": { "singleQuote": false }
    }
  ]
}
